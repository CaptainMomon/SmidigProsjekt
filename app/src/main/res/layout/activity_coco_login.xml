<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ws.design.coco_ecommerce_ui_kit.CocoLoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="74dp"
        android:layout_height="87dp"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="62.7dp"/>
    <customfonts.TextViewSFProDisplaySemibold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WORLDâ€™s Leading Ecommerce Platform"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_marginTop="19dp"/>

        <customfonts.EditText_Roboto_Meidum
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/round_rect"
            android:hint="Email ID"
            android:paddingLeft="28dp"
            android:paddingTop="16.5dp"
            android:paddingBottom="16.5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="12.7sp" />
    <customfonts.EditText_Roboto_Meidum
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12.7sp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:hint="Password"
        android:paddingLeft="28dp"
        android:paddingBottom="16.5dp"
        android:paddingTop="16.5dp"
        android:background="@drawable/round_rect"
        android:layout_marginTop="9dp"
        android:layout_marginRight="43dp"
        android:layout_marginLeft="43dp"/>
    <customfonts.Button_Roboto_Medium
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16.5dp"
        android:paddingTop="16.5dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="12.7sp"
        android:layout_marginRight="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="9dp"
        android:gravity="center_horizontal"
        android:background="@drawable/red_round_rect"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="90dp">
        <View
            android:layout_width="106dp"
            android:layout_height="1dp"

            android:layout_gravity="center"
            android:background="#31707070"/>
        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"

            android:text="Create Account"
            android:layout_marginLeft="14.5dp"
            android:layout_marginRight="14.5dp"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="106dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#31707070"/>

    </LinearLayout>
</RelativeLayout>