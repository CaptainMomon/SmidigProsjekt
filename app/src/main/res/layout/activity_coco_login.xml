<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.ws.design.coco_ecommerce_ui_kit.CocoLoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="74dp"
            android:layout_height="87dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62.7dp"
            android:src="@drawable/logo" />

        <customfonts.TextViewSFProDisplaySemibold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:gravity="center_horizontal"
            android:text="WORLDâ€™s Leading Ecommerce Platform"
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <customfonts.EditText_Roboto_Meidum
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/round_rect"
            android:hint="Email ID"
            android:paddingLeft="28dp"
            android:paddingTop="16.5dp"
            android:paddingBottom="16.5dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:textColorHint="@color/black" />

        <customfonts.EditText_Roboto_Meidum
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/round_rect"
            android:hint="Password"
            android:paddingLeft="28dp"
            android:paddingTop="16.5dp"
            android:paddingBottom="16.5dp"
            android:textAppearance="@android:style/TextAppearance.Material.Medium.Inverse"
            android:textColorHint="@color/black" />

        <customfonts.Button_Roboto_Medium
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="43dp"
            android:layout_marginTop="9dp"
            android:layout_marginRight="43dp"
            android:background="@drawable/red_round_rect"
            android:gravity="center_horizontal"
            android:paddingTop="16.5dp"
            android:paddingBottom="16.5dp"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColorLink="@color/colorAccent" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="90dp">
        <View
            android:layout_width="106dp"
            android:layout_height="1dp"

            android:layout_gravity="center"
            android:background="#31707070"/>

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14.5dp"

            android:layout_marginRight="14.5dp"
            android:text="Create Account"
            android:textAppearance="@android:style/TextAppearance.Material.Small" />
        <View
            android:layout_width="106dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#31707070"/>

    </LinearLayout>
</RelativeLayout>