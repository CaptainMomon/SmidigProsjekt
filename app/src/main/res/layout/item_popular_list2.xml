<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="196dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            
            
            <ImageView
                android:id="@+id/image"
                android:layout_width="63dp"
                android:layout_height="103dp"
                android:src="@drawable/iphnx"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="13.3sp"
                    android:textColor="@color/black"
                    android:text="I Phone X, 128GB (Black and Silver Color)"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rtbProductRating"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:numStars="5"
                    android:rating="3.5"
                    android:isIndicator="false"
                    android:theme="@style/RatingBar"
                    style="?android:attr/ratingBarStyleSmall" />

                    <customfonts.MyTextView_Roboto_Bold
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:layout_marginLeft="5dp"
                        android:textSize="11.3sp"
                        android:layout_gravity="center"
                        android:textColor="@color/cut_price"/>

                    <customfonts.MyTextView_Roboto_Black
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14.7sp"
                        android:layout_marginRight="12sp"
                        android:text="$ 343"/>


                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/dark_cart"/>

                </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:background="@color/view_line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="Ram : "
                                android:textSize="11.7sp"
                                android:textColor="#b3b3b3"/>

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#666666"
                                android:textSize="11.7sp"
                                android:text="8GB"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="Color : "
                                android:textSize="11.7sp"
                                android:textColor="#b3b3b3"/>

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#666666"
                                android:textSize="11.7sp"
                                android:text="Rose,Silver,Black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="CPU : "
                                android:textSize="11.7sp"
                                android:textColor="#b3b3b3"/>

                            <customfonts.MyTextView_Roboto_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#666666"
                                android:textSize="11.7sp"
                                android:text="Dual Core"/>
                        </LinearLayout>



                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>

            
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>