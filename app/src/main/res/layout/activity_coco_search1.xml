<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.wolfsoft2.coco_ecommerce_ui_kit.com.ws.wolfsoft2.coco_ecommerce_ui_kit.CocoSearch1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/red_rect"
        android:elevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="14sp"
            android:layout_marginRight="14sp"
            android:orientation="vertical">
        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16.7sp"
            android:text="Search" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_rect"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="#534a4a"
                    android:src="@drawable/search"/>

                <customfonts.EditText_Roboto_Meidum
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#737373"
                    android:textColorHint="#534a4a"
                    android:layout_marginLeft="15dp"
                    android:hint="Search,Product,Brands,etc...."
                    android:background="#00000000"/>



                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="#534a4a"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_photo_camera"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:tint="#534a4a"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_microphone"/>
            </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


    <customfonts.MyTextView_Roboto_Medium
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#99000000"
        android:textSize="12.3sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="11sp"
        android:text="52 Items Found"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13sp"
        android:background="@color/view_line"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 gb ram mobile >"
            android:textSize="12.3sp"
            android:textColor="@color/black"/>
        <customfonts.MyTextView_Roboto_Medium
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Mobile Category"
            android:textSize="12.3sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/red"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="270"
            android:tint="@color/cut_price"
            android:src="@drawable/ic_down_arrow"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13sp"
        android:layout_marginLeft="20dp"
        android:background="@color/view_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V Neck Tshirt >"
            android:textSize="12.3sp"
            android:textColor="@color/black"/>

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Men >"
            android:layout_marginLeft="8dp"
            android:textSize="12.3sp"
            android:textColor="@color/black"/>
        <customfonts.MyTextView_Roboto_Medium
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tshirt Category"
            android:textSize="12.3sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/red"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="270"
            android:tint="@color/cut_price"
            android:src="@drawable/ic_down_arrow"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="13sp"
        android:layout_marginLeft="20dp"
        android:background="@color/view_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oppo >"
            android:textSize="12.3sp"
            android:textColor="@color/black"/>

        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oppo >"
            android:layout_marginLeft="8dp"
            android:textSize="12.3sp"
            android:textColor="@color/black"/>
        <customfonts.MyTextView_Roboto_Medium
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Tshirt Category"
            android:textSize="12.3sp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/red"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:rotation="270"
            android:tint="@color/cut_price"
            android:src="@drawable/ic_down_arrow"/>

    </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
