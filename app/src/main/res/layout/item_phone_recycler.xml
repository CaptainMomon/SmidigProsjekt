<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="28.2dp"
        android:layout_height="56.7dp"
        android:src="@drawable/mobile2"
        android:id="@+id/phoneImage"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="17.5dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="28.4dp"
        android:layout_marginTop="17.3dp">
        <customfonts.MyTextView_Roboto_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13.3sp"
            android:id="@+id/phoneName"
            android:text="Iphone X | 128 GB, Black | 6 GB ram |
12000 mAh battry"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10.3dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            <LinearLayout
                android:layout_width="22.6dp"
                android:layout_height="22.6dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/add_minus_rect">
               <ImageView
                   android:layout_width="8dp"
                   android:layout_height="8dp"
                   android:layout_gravity="center"
                   android:src="@drawable/ic_add"/>
            </LinearLayout>
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="14.3sp"
                android:text="1"
                android:layout_marginLeft="10.7dp"
                android:layout_marginRight="10.7dp"
                />
            <LinearLayout
                android:layout_width="22.6dp"
                android:layout_height="22.6dp"
                android:gravity="center"
                android:background="@drawable/add_minus_rect">
                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_minus"/>
            </LinearLayout>

            </LinearLayout>
            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$288"
                android:id="@+id/amount"
                android:layout_marginRight="24.3dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/viewline"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#48707070"
        android:layout_marginTop="20dp"/>

</LinearLayout>